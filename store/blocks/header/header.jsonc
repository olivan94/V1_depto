  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "assets/logo.png",
      "width": "100"
    }
  },

  "login": {
    "props": {
      "showIconProfile": true,
      "hideIconLabel": true
    }
  },

  // ----------------------------desk-mobile--------------------------------
  
  "header-layout.mobile": {
    "children": [
      "sticky-layout#1-mobile",
      "search-bar"
    ]
  },
  "sticky-layout#1-mobile": {
    "children": ["flex-layout.row#1-mobile"]
  },
  "flex-layout.row#1-mobile": {
    "children": [
      "drawer",
      "logo#mobile",
      "flex-layout.col#spacer",
      "minicart.v2"
    ],
    "props": {
      "blockClass": "main-header-mobile",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true

    }
  },
  "drawer": {
    "props":{
      "maxWidth": 335
    },
    "children": ["menu#drawer"]
  },

  "menu#drawer": {
    "children": [
      "menu-item#category-eletronicos",
      "menu-item#category-celulares",
      "menu-item#category-informatica",
      "menu-item#category-casa",
      "menu-item#category-decor",
      "menu-item#category-beleza",
      "menu-item#category-midia",
      "menu-item#category-todos"
    ],
    "props": {
      "orientation": "vertical"
    }
  },

  "logo#mobile": {
    "props": { 
      "title": "Logo",
      "href": "/",
      "url": "assets/logo.png",
      "width": "90"
    }
  },

  "search-bar":{
    "props": {
      "hasIconLeft": false,
      "maxWidth": "100%",
      "displayMode":"search-button",
      "placeholder": "O que você precisa hoje? :)"
    }
  }
