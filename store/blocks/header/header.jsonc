  "flex-layout.row#2-desktop": {
    "props": {
      "blockClass": "r2desktop",
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "fullWidth": true
    },
    "children": [
      "logo#desktop",
      "search-bar",
      "flex-layout.col#spacer",
      "login",
      "minicart.v2"
    ]
  },

  "flex-layout.row#3-desktop": {
    "props": {
      "blockClass": "r3desktop",
      "horizontalAlign": "center",
      // "preventHorizontalStretch": true,
      // "preventVerticalStretch": true,
      "fullWidth": true,
      "colSizing": "auto"
    },
    "children": [
      "drawer#desk",
      "vtex.menu@2.x:menu#category-menu",
      "flex-layout.col#saldao"
    ]
  },

  "drawer#desk": {
    "props":{
      "maxWidth": 100
    }
  },

  "flex-layout.col#saldao": {
    "props":{
      "blockClass": "colSaldao",
      "horizontalAlign": "center",
      "width": "auto"
    },
    "children": [
      "image#saldao",
      "rich-text#saldaoHeader"
    ]
  },

  "image#saldao": {
    "props": {
      "src": "assets/saleRoxo.svg",
      "maxWidth": "20px"
    }
  },

  "rich-text#saldaoHeader": {
    "props":{
      "text": "**Saldão**",
      "blockClass": "saldaoTxt",
      "textAlignment":"CENTER",
      "textPosition": "CENTER"
    }
  },



