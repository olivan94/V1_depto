{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "rich-text#footer",
      "flex-layout.row#footer-3-desktop"
    ]
  },

  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#sobre",
      "flex-layout.col#atendimento",
      "flex-layout.col#ajuda",
      "flex-layout.col#pagamento",
      "flex-layout.col#redes"
    ],
    "props": {
      "blockClass": "footerDesk",
      "colSizing": "auto",
      "fullWidth": false,
      "horizontalAlign": "center",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true
    }
  },

  "flex-layout.col#sobre": {
    "children": [
      "rich-text#footer-mobile-about-title",
      "vtex.menu@2.x:menu#footer-about"
    ],
    "props":{
      "blockClass": "colSobre",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },

  "flex-layout.col#atendimento": {
    "children": [
      "rich-text#footer-mobile-atendimento-title",
      "vtex.menu@2.x:menu#footer-atendimento"
    ],
    "props":{
      "blockClass": "colAtendimento",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },

  "flex-layout.col#ajuda": {
    "children": [
      "rich-text#footer-mobile-ajuda-title",
      "vtex.menu@2.x:menu#footer-ajuda"
    ],
    "props":{
      "blockClass": "colAjuda",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },

  "flex-layout.col#pagamento": {
    "children": [
      "rich-text#pagamento-title",
      "flex-layout.row#imgPagamento"
    ],
    "props":{
      "blockClass": "colPagamento",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },

  "flex-layout.row#imgPagamento": {
    "children": [
      "image#visa",
      "image#master",
      "image#diners",
      "image#amex",
      "image#elo",
      "image#boleto"
    ],
    "props": {
      "blockClass": "imagPagamento"
    }
  },

  "flex-layout.col#redes": {
    "children": [
      "rich-text#redes-title",
      "social-networks"
    ],
    "props":{
      "blockClass": "colRedes",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": [
      "image#encrypt",
      "image#ebit",
      "image#pci"
    ],
    "props": {
      "blockClass": "certificados"
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": [
      "image#avanti",
      "image#vtexio"
    ],
    "props": {
      "blockClass": "osCara"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "AVANTI S.A Â© 2020. TODOS OS DIREITOS RESERVADOS.",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#footer-mobile-about",
      "flex-layout.row#footer-mobile-atendimento",
      "flex-layout.row#footer-mobile-ajuda",
      "social-networks",
      "flex-layout.row#mobile-payment",
      "flex-layout.row#mobile-certificates",
      "flex-layout.row#footer-osCara"
    ]
  },

  "flex-layout.row#footer-mobile-about": {
    "children": [
      "rich-text#footer-mobile-about-title",
      "vtex.menu@2.x:menu#footer-about"
    ],
    "props": {
      "blockClass": "footer-menu-rows"
    }
  },
  "flex-layout.row#footer-mobile-atendimento": {
    "children": [
      "rich-text#footer-mobile-atendimento-title",
      "vtex.menu@2.x:menu#footer-atendimento"
    ],
    "props": {
      "blockClass": "footer-menu-rows"
    }
  },
  "flex-layout.row#footer-mobile-ajuda": {
    "children": [
      "rich-text#footer-mobile-ajuda-title",
      "vtex.menu@2.x:menu#footer-ajuda"
    ],
    "props": {
      "blockClass": "footer-menu-rows"
    }
  },

  "rich-text#footer-mobile-about-title":{
    "props": {
      "text": "**Sobre**",
      "blockClass": "footerMenuTitle"
    }
  },
  "rich-text#footer-mobile-atendimento-title":{
    "props": {
      "text": "**Atendimento**",
      "blockClass": "footerMenuTitle"
    }
  },
  "rich-text#footer-mobile-ajuda-title":{
    "props": {
      "text": "**Ajuda**",
      "blockClass": "footerMenuTitle"
    }
  },
  "rich-text#pagamento-title": {
    "props": {
      "text": "**Pagamento**",
      "blockClass": "footerMenuTitle"
    }
  },

  "rich-text#redes-title": {
    "props": {
      "text": "**Nossas redes**",
      "blockClass": "footerMenuTitle"
    }
  },

  "flex-layout.row#mobile-payment": {
    "children": [
      "image#visa",
      "image#master",
      "image#diners",
      "image#amex",
      "image#elo",
      "image#boleto"
    ],
    "props": {
      "blockClass": "mobilePayment"
    }
  },

  "image#visa": {
    "props": {
      "src": "assets/visa.png",
      "blockClass": "mobilePayment"
    }
  },

  "image#master": {
    "props": {
      "src": "assets/master.png",
      "blockClass": "mobilePayment"
    }
  },

  "image#diners": {
    "props": {
      "src": "assets/diners.png",
      "blockClass": "mobilePayment"
    }
  },

  "image#amex": {
    "props": {
      "src": "assets/amex.png",
      "blockClass": "mobilePayment"
    }
  },

  "image#elo": {
    "props": {
      "src": "assets/elo.png",
      "blockClass": "mobilePayment"
    }
  },

  "image#boleto": {
    "props": {
      "src": "assets/boleto.png",
      "blockClass": "mobilePayment"
    }
  },

  "flex-layout.row#mobile-certificates": {
    "children": [
      "image#encrypt",
      "image#ebit",
      "image#pci"
    ],
    "props": {
      "preserveLayoutOnMobile": true,
      "blockClass": "mobileCertificates"
    }
  },

  "image#encrypt": {
    "props": {
      "src": "assets/letsencrypt.png",
      "blockClass": "mobileCertificates"
    }
  },
  "image#ebit": {
    "props": {
      "src": "assets/ebit.png",
      "blockClass": "mobileCertificates"
    }
  },
  "image#pci": {
    "props": {
      "src": "assets/pci.png",
      "blockClass": "mobileCertificates"
    }
  },

  "flex-layout.row#footer-osCara": {
    "children": [
      "image#avanti",
      "image#vtexio"
    ],
    "props": {
      "preserveLayoutOnMobile": true,
      "blockClass": "mobileOsCara"
    }
  },

  "image#avanti": {
    "props": {
      "src": "assets/avanti1.png",
      "link": "https://penseavanti.com.br/",
      "blockClass": "mobileOsCaraAvanti"
    }
  },

  "image#vtexio": {
    "props": {
      "src": "assets/vtex.png",
      "link": "https://vtex.io/",
      "blockClass": "mobileOsCara"
    }
  }
}
